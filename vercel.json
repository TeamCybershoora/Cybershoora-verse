{
  "buildCommand": "npm run build",
  "installCommand": "npm install --legacy-peer-deps --no-audit --no-fund --omit=optional",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 60
    }
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=8192",
      "SKIP_STATIC_GENERATION": "true",
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_ENV": "production"
    }
  },
  "regions": ["iad1"]
} 