{
  "buildCommand": "npm run build",
  "installCommand": "npm install --legacy-peer-deps --no-audit --no-fund --omit=optional --prefer-offline",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 60
    }
  },
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=8192"
  },
  "regions": ["iad1"],
  "build": {
    "env": {
      "SKIP_STATIC_GENERATION": "true",
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_ENV": "production",
      "NODE_OPTIONS": "--max-old-space-size=8192"
    }
  }
} 