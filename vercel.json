{
  "buildCommand": "npm run build",
  "installCommand": "npm ci --legacy-peer-deps --no-audit --no-fund",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=6144",
      "SKIP_STATIC_GENERATION": "true"
    }
  },
  "regions": ["iad1"]
} 